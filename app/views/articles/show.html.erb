<h1>Article Details</h1>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
                by <%= @article.user.username %>
            </div>
            <div class="card-body">
                <div class="card-text text-left">
                    <h5 class="card-title"><%= @article.title %></h5>
                    <p class="card-text"><%= simple_format(@article.description) %> </p>
                    <button class="btn btn-primary text-white"><%= link_to 'Edit', edit_article_path(@article) %></button>
                    <a class="btn btn-primary"><%= link_to 'Edit', edit_article_path(@article) %></a>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>



<button><%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %></button>
<button><%= link_to 'Return to list', articles_path%></button>

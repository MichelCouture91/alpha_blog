<h1 class="text-center mt-4">Article Details</h1>
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
                by <%= @article.user.username %>
            </div>
            <div class="card-body">
                <div class="card-text text-left">
                    <h5 class="card-title"><%= @article.title %></h5>
                    <p class="card-text"><%= simple_format(@article.description) %> </p>
                   <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-success" %>
                    <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
                    <%= link_to 'Return to list', articles_path, class: "btn btn-outline-primary" %>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>



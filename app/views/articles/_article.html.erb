<% obj.each do |art| %>
    <div class="row justify-content-md-center">
        <div class="col-8">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                <% if art.user %>
                    by <%= link_to art.user.username, user_path(art.user)%>
                <% end %>
                <% if art.categories.any? %>
                    <div class="mt-2"><%= render art.categories %></div> 
                <% end %>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to art.title, article_path(art), class: "link-success" %></h5>
                    <p class="card-text"><%= truncate(art.description, length: 100) %></p>
                    <%= link_to "Show", article_path(art.id), class: "btn btn-outline-primary" %>
                    <% if logged_in? && (art.user == current_user || current_user.admin) %>
                        <%= link_to "Edit", edit_article_path(art.id), class: "btn btn-outline-success" %>
                        <%= link_to "Delete", article_path(art.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
                    <% end %>    
                </div>
                <div class="card-footer text-muted">
                    <small> Created <%= time_ago_in_words(art.created_at) %> ago,
                    Edited <%= time_ago_in_words(art.updated_at) %> ago </small>
                </div>
            </div>
        </div>
    </div>
<% end %>
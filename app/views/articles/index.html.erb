<h1 class="text-center mt-4">Listing all articles</h1>

<div class="container">

<% @articles.each do |art| %>
    <div class="row justify-content-md-center">
        <div class="col-8">
            <div class="card text-center">
            <div class="card-header">
                Featured
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= art.title %></h5>
                <p class="card-text"><%= art.description %></p>
                <a href="#" class="btn btn-primary"><%= link_to "Show", article_path(art.id) %></a>
                <a href="#" class="btn btn-primary"><%= link_to "Edit", edit_article_path(art.id) %></a>
                <a href="#" class="btn btn-primary"><%= link_to "Delete", article_path(art.id), method: :delete, data: { confirm: "Are you sure?" } %></a>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
            </div>
    </div>
</div>
<% end %>

</div>


<br/>
<button><%= link_to "Create New Article", new_article_path %></button>

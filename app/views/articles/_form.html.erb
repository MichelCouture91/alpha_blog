
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">

        <%= render "shared/errors", obj: @article %>

        <%= form_with(model: @article, local: true) do |f| %>
            <div class="form-group p-3">
                <%= f.label :title %> <br/>
                <%= f.text_field :title, class: "form-control"%>
            </div>
            <div class="form-group p-3">
                <%= f.label :description %> <br/>
                <%= f.text_area :description, class: "form-control"%>
            </div>
            <div class="form-group p-3">
                <%= f.label :category %> <br/>
                
                    <%= f.collection_select(:category_ids, Category.all, :id, :name,
                    {prompt: "Make your selection from the list below(can b empty)"}, {multiple: true, size: 3, class: "form-select shadow rounded"})%>
            
            </div>

            <div class="form-group p-3">
                <%= f.submit class: "btn btn-primary p-3"%>
                <%= link_to 'Cancel', articles_path, class: "btn btn-primary p-3"%>
            </div>
        <% end %>
        </div>
    </div>
</div>
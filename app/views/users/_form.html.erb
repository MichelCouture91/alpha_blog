
<div class="container">
<%= form_with(model: @user, local: true) do |f| %>
    <div class="form-group p-3">
        <%= f.label :username %> <br/>
        <%= f.text_field :username, class: "form-control", placeholder: "Enter a username"%>
    </div>
    <div class="form-group p-3">
        <%= f.label :email %> <br/>
        <%= f.email_field :email, class: "form-control" , placeholder: "Enter your email"%>
    </div>
    <div class="form-group p-3">
        <%= f.label :password %> <br/>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter a password"%>
    </div>
    <div class="form-group p-3">
        <%= f.submit class: "btn btn-primary p-3"%>
        <%= link_to 'Cancel', articles_path, class: "btn btn-primary p-3"%>
    </div>
<% end %>
</div>
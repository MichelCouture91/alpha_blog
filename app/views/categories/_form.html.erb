<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, local: true) do |f| %>
    <div class="form-group p-3">
        <%= f.label :name, "Category Name" %> <br/>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter a name"%>
    </div>
    <div class="form-group p-3">
        <%= f.submit class: "btn btn-primary p-3"%>
        <%= link_to 'Cancel', articles_path, class: "btn btn-primary p-3"%>
    </div>
<% end %>
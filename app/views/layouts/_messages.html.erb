<div class="container">
    <% flash.each do |name, msg| %>
        <div class="<%= name == "notice" ? "alert-success" : "alert-danger" %> alert alert-dismissible fade show" role="alert">
            <%= msg %>
            <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
    <% end %>
</div>

